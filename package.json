{
  "name": "@popeindustries/lit-html-server",
  "version": "1.6.1",
  "description": "Render lit-html templates on the server",
  "author": "Alexander Pope <alex@pope-industries.com>",
  "keywords": [
    "html template",
    "lit-html",
    "ssr",
    "stream",
    "streaming",
    "tagged template literal",
    "template",
    "template render"
  ],
  "main": "index.js",
  "module": "index.mjs",
  "types": "index.d.ts",
  "repository": "https://github.com/popeindustries/lit-html-server.git",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "autocannon": "^4.4.2",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "esm": "^3.2.25",
    "get-stream": "^5.1.0",
    "husky": "^4.0.9",
    "lint-staged": "^9.5.0",
    "lit-html": "^1.1.0",
    "mocha": "^7.0.0",
    "prettier": "^1.19.1",
    "rollup": "^1.29.0",
    "text-encoding": "^0.7.0",
    "@types/node": "^13.1.7",
    "typescript": "^3.7.4",
    "web-streams-polyfill": "^2.0.6"
  },
  "scripts": {
    "build": "node ./scripts/build.js",
    "format": "prettier --write './{directives,src,test}/**/*.{js,json}'",
    "lint": "eslint './{directives,src,test}/**/*.js'",
    "perf": "node test/perf.js",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npm run test:types && npm run test:unit",
    "test:unit": "NODE_ENV=test mocha \"test/*-test.js\" --reporter spec --bail --timeout 2000 --require esm",
    "test:types": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
